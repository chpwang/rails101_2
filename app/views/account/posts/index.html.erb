<div class="col-md-12">

  <table class="table">
    <thead>
     <tr>
        <th>文章内容</th>
        <th>发表时间</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= render_post_content(post) %></td>
          <td><%= post.created_at %></td>
          <td><%= link_to("Edit", edit_account_post_path(post), class: "btn btn-sm btn-default")%></td>
          <td><%= link_to("Delete", account_post_path(post),    class: "btn btn-sm btn-default", 
                          method: :delete, data: { confirm: "Are you sure?" } )%></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center">
    <%= will_paginate @posts %>
  </div>

</div>